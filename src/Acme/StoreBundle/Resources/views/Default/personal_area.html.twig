{% extends 'layout.html.twig' %}


{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
    <script src="{{ asset('js/exit.js')}}"></script>
{% endblock %}

{% block ies %}
    <div class="container personal-container">

        <div class="col-md-10">
            <div class="user-photo col-md-3 col-md-offset-1">
                <img src="https://pp.userapi.com/c624823/v624823135/28af7/doqL8Fb4axE.jpg"/>
            </div>
            <div class="user-info col-md-8 row">
                <div class="info col-md-9">
                    <div class="user-login">
                        <label>Login</label>
                        <h3 >{{ login }}</h3>
                    </div>
                    <div class="user-email">
                        <label>Email</label>
                        <h3>{{ email }}</h3>
                    </div>
                    <div class="user-nickname">
                        <label>Nickname</label>
                        <h3>{{ nickname }}</h3>
                    </div>
                </div>

            </div>
            <div class="user-liked col-md-12">
                {% for product in liked_product_list %}
                    <div class="liked-product">
                        <a href="{{ product.href }}"></a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="button-area col-md-1 col-md-offset-1">
            <input type="submit" value="Выйти" class="exit-button" id="exit-button"/>
            <input type="submit" value="Изменить" class="edit-button"/>
        </div>
    </div>
{% endblock %}
